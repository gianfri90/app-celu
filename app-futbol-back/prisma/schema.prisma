generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  password String
  grupoPorPersona GrupoPorPersona[]
  promedio promedio[]
}

model Grupo{
  id Int @id @default(autoincrement())
  name String
  maxIntegrantes Int @default(10)
  code String @unique
  grupoPorPersona GrupoPorPersona[]
  promedio promedio[]
}

model GrupoPorPersona {
  id Int @id @default(autoincrement())
  userId Int
  isAdmin Boolean @default(false)
  grupoId Int
  user User @relation(fields: [userId], references: [id])
  grupo Grupo @relation(fields: [grupoId], references: [id])
}

model promedio{
  id Int @id @default(autoincrement())
  value Float
  userId Int
  grupoId Int
  user User @relation(fields: [userId], references: [id])
  grupo Grupo @relation(fields: [grupoId], references: [id])
}